				<!-- CONTACT FORM -->
				<div class="row">

					<div class="col-sm-6 col-sm-offset-3">

						<%= simple_form_for @catering, url: contact_path do |message_form| %>
						<form id="contact-form" role="form" novalidate="">

							<div class="form-group">
								<label class="sr-only" for="cname">Name</label>
								<%= message_form.text_field :name, class: 'form-control', id: 'cemail', placeholder: "Name" %>
								<p class="help-block text-danger"></p>
							</div>

							<div class="form-group">
								<label class="sr-only" for="cemail">Your Email</label>
								<%= message_form.email_field :email, class: 'form-control', id: 'cemail', placeholder: 'Your Email Address' %>
								<p class="help-block text-danger"></p>
							</div>

							<div class="form-group">
								<%= message_form.text_area :message, class: 'form-control', id:"cmessage", rows: 7, placeholder: 'Your message here...' %>
								<p class="help-block text-danger"></p>
							</div>

							<%= message_form.submit "Send", class: 'btn btn-round btn-g' %>

						</form>
						<% end %>

						<!-- Ajax response -->
						<div id="contact-response" class="ajax-response font-alt"></div>

					</div>

				</div>
				<!-- /CONTACT FORM -->

			</div>

		</section>
